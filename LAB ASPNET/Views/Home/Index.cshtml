@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome @ViewData["User"] !</h1>
    <p>Your age: @ViewData["Age"]</p>
    <p>Driving Licence: @(Convert.ToBoolean(ViewData["HasDrivingLicence"]) ? "Yes" : "No")</p>
</div>

<div class="text-center">
    <h3>Choose a user:</h3>
    @Html.ActionLink("John", "Index", "Home", new { name = "John", age = 30, hasDrivingLicence = true }, new { @class = "btn btn-primary mx-2" })
    @Html.ActionLink("Mary", "Index", "Home", new { name = "Mary", age = 25, hasDrivingLicence = false }, new { @class = "btn btn-primary mx-2" })
    @Html.ActionLink("Ben", "Index", "Home", new { name = "Ben", age = 40, hasDrivingLicence = true }, new { @class = "btn btn-primary mx-2" })
    @Html.ActionLink("Jane", "Index", "Home", new { name = "Jane", age = 22, hasDrivingLicence = false }, new { @class = "btn btn-primary mx-2" })
</div>
